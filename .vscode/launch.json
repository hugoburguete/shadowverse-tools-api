{
  // Use IntelliSense to learn about possible attributes. Hover to view
  // descriptions of existing attributes. For more information, visit:
  // https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "attach",
      "name": "Attach NestJS WS",
      "address": "0.0.0.0",
      "port": 9229,
      "sourceMaps": true,
      "restart": true,
      "localRoot": "${workspaceFolder}",
      "remoteRoot": "/app",
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug NestJS Tests",
      "runtimeExecutable": "npm",
      "runtimeArgs": [
        "run",
        "test:debug",
      ],
      "stopOnEntry": false,
      "console": "integratedTerminal",
    }
  ]
}